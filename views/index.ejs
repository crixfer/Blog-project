<div class="author">
  <h1 class="author__heading">
    Welcome to
    <div class="keyboard">
      <span class="key">O</span>
      <span class="key">t</span>
      <span class="key">r</span>
      <span class="key">o</span>
      <span class="key">B</span>
      <span class="key">l</span>
      <span class="key">o</span>
      <span class="key">g</span>
    </div>
  </h1>
  <p class="author__body">a Blog to express yourself respectfully.</p>
</div>

<img
  src="/img/old-typing-machine.avif"
  alt="An old writing machine, books and stuff to write."
  class="hero-image"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
