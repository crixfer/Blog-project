<!-- Dashboard -->

<div class="admin-title">
  <h2>Posts</h2>
  <!-- Ensure the correct path for adding a new post -->
  <a href="/admin/add-post" class="button">+ Add New</a>
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>

  <li>
    <a href="/post/<%= post._id %>"><%= post.title %></a>
    <div class="admin-post-controls">
      <!-- Ensure the correct path for editing a post -->
      <a href="/admin/edit-post/<%= post._id %>" class="btn">Edit</a>

      <!-- Ensure the correct path for deleting a post -->
      <form
        action="/admin/delete-post/<%= post._id %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="delete" class="btn" />
      </form>
    </div>
  </li>

  <% }) %>
</ul>
